{
  "name": "tweetr-api",
  "version": "0.1.0",
  "description": "API for a twitter clone, made as an internship task",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "dev": "nodemon -r dotenv/config src/index.ts",
    "start": "node dist/index.js",
    "reset": "rm -rf node_modules && yarn"
  },
  "dependencies": {
    "apollo-server-express": "^2.16.1",
    "argon2": "^0.26.2",
    "express": "^4.17.1",
    "firebase-admin": "^9.0.0",
    "graphql-middleware": "^4.0.2",
    "graphql-scalars": "^1.2.6",
    "graphql-shield": "^7.3.3",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.8",
    "mongoose": "^5.9.27",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/express": "^4.17.7",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.35",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,graphql,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": "https://github.com/g-ravity/tweetr-api",
  "author": "Ravik Ganguly",
  "license": "MIT"
}
